{
  "name": "vitrinex-ai-app",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "dev:clean": "rd /s /q \"node_modules\\.vite\" 2>nul & vite",
    "build": "tsc -p electron/tsconfig.json && vite build",
    "build:analyze": "ANALYZE=true vite build",
    "build:canva": "BUILD_MODE=canva vite build",
    "build:standalone": "BUILD_MODE=standalone vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "electron:dev": "tsc -p electron/tsconfig.json && electron .",
    "dist:electron": "tsc -p electron/tsconfig.json && electron-builder",
    "build:extension": "vite build && copy public\\manifest.extension.json dist\\manifest.json",
    "deploy:cloudrun": "gcloud run deploy vitrinex-app --source . --port 8080 --allow-unauthenticated"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@canva/app-eslint-plugin": "^1.0.0-beta.7",
    "@canva/app-i18n-kit": "^1.2.0",
    "@canva/app-ui-kit": "5.4.0",
    "@canva/asset": "2.2.2",
    "@canva/design": "2.7.5",
    "@canva/intents": "2.0.0",
    "@canva/user": "2.1.2",
    "@google/genai": "^1.34.0",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@imgly/background-removal": "^1.7.0",
    "@stripe/stripe-js": "^8.6.0",
    "@supabase/supabase-js": "^2.87.3",
    "@tanstack/react-query": "^5.24.1",
    "@types/file-saver": "^2.0.7",
    "@types/socket.io-client": "^1.4.36",
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.26",
    "gifenc": "^1.0.3",
    "google-auth-library": "^10.5.0",
    "googleapis": "^170.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jszip": "^3.10.1",
    "pptxgenjs": "^4.0.1",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "recharts": "^3.6.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^20.1.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "zod": "^4.3.6",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/types": "^7.28.5",
    "@electron/rebuild": "^4.0.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.18",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.vitrinex.ai",
    "productName": "VitrineX AI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
